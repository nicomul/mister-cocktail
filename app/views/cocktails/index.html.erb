<div class='text-center'>

  <%= link_to 'add a new Cocktail', new_cocktail_path %>

  <div>

    <h1>My list of cocktails</h1>
      <% @cocktails.each do |cocktail| %>
        <h2><%= cocktail.name %></h2>
          <% cocktail.doses.each do |dose| %>

            <p><%= dose.description %> (<%= dose.ingredient.name %>)</p>
          <% end %>
      <% end %>

<div class="row">
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/panier.jpeg');">
              <div class="card-category">Vente à la ferme</div>
              <div class="card-description">
                <h2>Paniers de légumes</h2>
                <p>Produits naturels</p>
              </div>
              <a class="card-link" href="#" ></a>
            </div>
          </div>

  </div>


</div>
